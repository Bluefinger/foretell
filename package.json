{
  "name": "foretell",
  "version": "0.1.0",
  "description": "A small, fast Promise/A+ implementation written in Typescript",
  "main": "dist/umd/foretell.min.js",
  "module": "dist/esm/foretell.min.js",
  "types": "dist/esm/promise.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist/*",
    "build": "run-p build:umd build:polyfill build:esm",
    "build:umd": "rollup -c ./rollup.config.umd.js",
    "build:polyfill": "rollup -c ./rollup.config.umd.js -i ./src/polyfill.js -o ./dist/umd/foretell.polyfill.js",
    "build:esm": "rollup -c ./rollup.config.esm.js",
    "prepare": "npm run build",
    "pretest": "rollup -c ./rollup.config.mocha.js",
    "posttest": "rimraf ./test/generated/*",
    "watch": "tsc -w",
    "test": "run-p test:lint test:mocha",
    "test:mocha": "nyc --reporter=lcov --reporter=text-summary mocha",
    "test:lint": "eslint \"./+(src|test)/**/*.{js,ts}\""
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@typescript-eslint/typescript-estree": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "promises-aplus-tests": "^2.1.2",
    "rimraf": "^2.7.1",
    "rollup": "^1.20.2",
    "rollup-plugin-istanbul": "^2.0.1",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.23.0",
    "source-map-support": "0.5.13",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/benchmarks/**",
      "**/dist/**",
      "**/test/**",
      "**/*.d.ts",
      "**/src/defer.ts"
    ]
  }
}
