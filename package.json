{
  "name": "foretell",
  "version": "0.4.0",
  "description": "A small, fast Promise/A+ implementation written in Typescript",
  "main": "dist/umd/foretell.min.js",
  "module": "dist/esm/foretell.min.js",
  "types": "dist/esm/promise.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist/*",
    "build": "rollup -c",
    "prepare": "npm run build",
    "watch": "tsc -w",
    "test": "run-p test:lint test:mocha",
    "test:mocha": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc mocha",
    "test:lint": "eslint \"./+(src|test)/**/*.{js,ts}\""
  },
  "author": {
    "name": "Gon√ßalo Payne",
    "email": "bluefinger@gmail.com",
    "url": "https://codepayne.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "@typescript-eslint/typescript-estree": "^2.26.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.2",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "sinon": "^9.0.1",
    "ts-node": "^8.8.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/benchmarks/**",
      "**/dist/**",
      "**/test/**",
      "**/src/scheduler.ts",
      "**/src/utils.ts"
    ]
  }
}
