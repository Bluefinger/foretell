{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "./.cache/tsBuildInfo",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "module":"esnext",
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
